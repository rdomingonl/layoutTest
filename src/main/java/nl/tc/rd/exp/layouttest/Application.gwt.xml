<module rename-to="application">

  <inherits name='com.google.gwt.user.User' />
  <inherits name='com.google.gwt.user.RemoteService' />
  <inherits name='com.google.gwt.user.theme.standard.Standard' />
  
  <!-- [GXT CONFIGURATION START] -->
  <!-- GXT module inherits -->
  <inherits name='com.sencha.gxt.ui.GXT' />
  
  <!-- [GXT CONFIGURATION END] -->
  
  <!-- GXT Stylesheet -->
 <stylesheet src="reset.css" />

  <entry-point class='nl.tc.rd.exp.layouttest.client.Application' />

  <source path='client' />
  <source path='shared' />

  <!-- The super source files are in src/main/resources --> 
  <super-source path="super" />

  <!-- allow Super Dev Mode -->
  <add-linker name="xsiframe"/>
  <set-configuration-property name="devModeRedirectEnabled" value="true"/>
</module>
